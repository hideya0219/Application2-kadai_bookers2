<div class="container">
  <div class="row">
    <div class="col-4">
      <div class="user-info">
        <h1>User info</h1>
        <%= image_tag 'sample-author1.jpg', size:"100x100" %>
        <p>name</p>
        <p>introduction</p>
        <div class="d-grid gap-2">
          <button type="button" class="btn btn-outline-dark">
            <i class="fa-sharp fa-solid fa-user-gear"></i>
          </button>
        </div>

      </div>
      <div class="new-book">
        <h1>New book</h1>
        <%= form_with model: @book do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>

          <h4>Opinion</h4>
          <%= f.text_area :body %>


          </br><%= f.submit 'Create Book', class: 'btn btn-success' %>
        <% end %>
      </div>
    </div>
    <div class="col-8"></div>
  </div>
</div>
