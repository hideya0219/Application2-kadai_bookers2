<div class="container">
  <div class="row">
    <div class="col-4">
      <div class="user-info">
        <h1>User info</h1>
        <%= image_tag 'sample-author1.jpg', size:"100x100" %>
        <table class="table">
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction %></th>
          </tr>
        </table>
        <div class="d-grid gap-2">
          <button type="button" class="btn btn-outline-dark">
            <i class="fa-sharp fa-solid fa-user-gear"></i>
          </button>
        </div>
      </div>
      <div class="new-book">
        <h1>New book</h1>
        <%= form_with model: @book do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>

          <h4>Opinion</h4>
          <%= f.text_area :body %>


          </br><%= f.submit 'Create Book', class: 'btn btn-success' %>
        <% end %>
      </div>
    </div>
    <div class="col-8">
      <h1>Books</h1>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Oponion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <th style="width: 100px; height: 100px;"><%= image_tag 'sample-author1.jpg', size:"100x100" %></th>
              <th><%= book.title %></th>
              <th><%= book.body %></th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
