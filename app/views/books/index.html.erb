<div class="container">
  <div class="row">
    <%= render 'list', book: @book %>
    <div class="col-8">
      <h1>Books</h1>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Oponion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <th style="width: 100px; height: 100px;"><%= image_tag 'sample-author1.jpg', size:"100x100" %></th>
              <th><%= book.title %></th>
              <th><%= book.body %></th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
