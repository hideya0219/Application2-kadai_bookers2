<div class="container">
  <div class="row">
    <div class="error-message">
      <% if @book.errors.any? %>
        <h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
    <%= render 'list', book: @book %>
    <div class="col-8">
      <h1>Books</h1>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Oponion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <th style="width: 100px; height: 100px;"><%= image_tag book.user.get_profile_image %></th>
              <th>
                <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                <% end %>
              </th>
              <th><%= book.body %></th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
