<div class="container pt-3 pb-5">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <div class="editing-book">
        <h1>Editing Book</h1>
        <div class="error-message">
          <% if @book.errors.any? %>
            <h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>
        </div>
        <%= form_with model: @book, url: book_path(@book), method: :patch do |f| %>
          <p class="mb-1">Title</p>
          <%= f.text_field :title, class: 'form-control' %>
          <p class="mb-1 mt-3">Opinion</p>
          <%= f.text_area :body, class: 'form-control' %></br>
          <%= f.submit 'Update Book', class: 'btn btn-success mb-3' %></br>
          <%= link_to "Show", book_path(@book), class: 'link text-decoration-none' %>
          <%= link_to "Back", books_path, class: 'link text-decoration-none' %>
        <% end %>
      </div>
    </div>
  </div>
</div>