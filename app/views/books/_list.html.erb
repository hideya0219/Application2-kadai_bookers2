<div class="col-4">
  <div class="user-info">
    <h1>User info</h1>
    <%= image_tag 'sample-author1.jpg', size:"100x100" %>
    <table class="table">
      <tr>
        <th>name</th>
        <th><%= current_user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= current_user.introduction %></th>
      </tr>
    </table>
    <div class="d-grid gap-2">
      <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-dark" do %>
        <i class="fa-sharp fa-solid fa-user-gear"></i>
      <% end %>
    </div>
  </div>
  <div class="new-book">
    <h1>New book</h1>
    <%= form_with model: @book do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>

      <h4>Opinion</h4>
      <%= f.text_area :body %>


      </br><%= f.submit 'Create Book', class: 'btn btn-success' %>
    <% end %>
  </div>
</div>

