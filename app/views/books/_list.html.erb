<div class="flash">
  <%= flash[:notice] %>
</div>
<div class="col-md-3">
  <div class="user-info">
    <h1>User info</h1>
    <p><%= image_tag user.get_profile_image %></p>
    <table class="table">
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </table>
    <div class="d-grid gap-2">
      <%= link_to edit_user_path(user.id), class: "btn btn-outline-dark" do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
    </div>
  </div>
  <div class="new-book">
    <h1>New book</h1>
    <%= form_with model: book, url: books_path do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>

      <h4>Opinion</h4>
      <%= f.text_area :body %>


      </br><%= f.submit 'Create Book', class: 'btn btn-success' %>
    <% end %>
  </div>
</div>

