<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'books/list', book: @book, user: @user %>
    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |books| %>
            <tr>
              <th>
                <%= link_to user_path(@user) do %>
                  <%= image_tag books.user.get_profile_image %>
                <% end %>
              </th>
              <th>
                <%= link_to book_path(books.id) do %>
                  <%= books.title %>
                <% end %>
              </th>
              <th><%= books.body %></th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
