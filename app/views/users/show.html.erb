<div class="container">
  <div class="row">
    <%= render 'books/list', book: @book, user: @user %>
    <div class="col-8">
      <h1>Books</h1>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |books| %>
            <tr>
              <th><%= image_tag 'default-image.jpg', size:"100x100" %></th>
              <th>
                <%= link_to book_path(books.id) do %>
                  <%= books.title %>
                <% end %>
              </th>
              <th><%= books.body %></th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
