<div class="container">
  <div class="row">
    <%= render 'books/list', book: @book, user: @user %>
    <div class="col-md-8 offset-md-1">
      <h1>Users</h1>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <th><%= image_tag user.get_profile_image %></th>
              <th><%= user.name %></th>
              <th><%= link_to "Show", user_path(user), class: "link",  :style=>"text-decoration: none;" %></th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
