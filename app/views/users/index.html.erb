<div class="container">
  <div class="row">
    <%= render 'books/list', book: @book %>
    <div class="col-8">
      <h1>Users</h1>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <th><%= image_tag 'sample-author1.jpg', size:"100x100" %></th>
              <th><%= user.name %></th>
              <th><%= link_to "Show", user_path(user), class: "link",  :style=>"text-decoration: none;" %></th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
