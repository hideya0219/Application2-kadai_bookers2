<div class="container">
  <div class="row">
    <div class="col-6">
      <h1>User info</h1>
      <%= form_with model: @user, method: :patch do |f| %>
        <p>Name</p>
        <%= f.text_field :name %>
        <p>Image</p>
        <%= f.file_field :profile_image %>
        <p>Introduction</p>
        <%= f.text_area :introduction %></br>
        <%= f.submit "Update User", class: 'btn btn btn-secondary' %>
      <% end %>
    </div>
  </div>
</div>
