<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User info</h1>
      <div class="error-message">
        <% if @user.errors.any? %>
          <h2><%= @user.errors.count %>errors prohibited this obj from being saved:</h2>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
      <%= form_with model: @user, method: :patch do |f| %>
        <p class="mb-1">Name</p>
        <%= f.text_field :name, class: 'form-control' %>
        <p class="mb-1 mt-3">Image</p>
        <%= f.file_field :profile_image %>
        <p class="mb-1 mt-3">Introduction</p>
        <%= f.text_area :introduction, class: 'form-control' %></br>
        <%= f.submit "Update User", class: 'btn btn btn-secondary' %>
      <% end %>
    </div>
  </div>
</div>
